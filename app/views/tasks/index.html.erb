<% provide(:title, "Index") %>

<div class="container">
  <h1><%= @user.name %>のタスク一覧</h1>
</div>

<div class="row">
  <div class="col-md-m10 col-md-offset-1">
    <%= link_to "タスク新規作成", new_user_task_path(@user), class: "btn btn-lg btn-primary pull-right" %>
    <table class="table table-hover" id="table-tasks">
      <thead>
        <th>名前</th>
        <th>作成日</th>
      </thead>
      <tbody>
        <tr>
          <%= @tasks.each do |task| %>
            <td><%= task.name %></td>
            <td><%= task.created_at %></td>
          <% end %>
      </tbody>
        </tr>

    </table>
  </div>
</div>
