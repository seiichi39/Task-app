<% provide(:title, "edit") %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="form-heading">タスク編集</h1>
    
    <%= form_with(model: @task, local: true, url: user_task_path(@user), method: :patch) do |f| %>
      <%= render 'shared/error_messages', object: @task %>
    
      <%= f.label :name, class: "label-login" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :description, class: "label-login" %>
      <%= f.text_area :description, rows: "4", cols: "40", class: "form-control" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-login" %>
      <%= link_to "キャンセル", user_tasks_path(current_user.id), class: "btn btn-default btn-login" %>

    <% end %>
  </div>
</div>
