<% provide(:title, "edit") %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="form-heading">タスク編集</h1>
    
    <%= form_with(model: @task, local: true, url: user_task_path(@user), local: true, method: :patch) do |f| %>
    
      <%= f.label :名称, class: "label-login" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :詳細, class: "label-login" %>
      <%= f.text_area :description, rows: "4", cols: "40", class: "form-control" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-login pull-left" %>

    <% end %>
  </div>
</div>
