<% provide(:title, "login") %>
<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if logged_in? %>
      <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
        <%= f.label :email, "メールアドレス", class: "label-login" %>
        <%= f.email_field :email, class: 'form-control', disabled: true %>
        <%= f.label :password, "パスワード", class: "label-login" %>
        <%= f.password_field :password, class: 'form-control', disabled: true %>
        <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
          <%= f.check_box :remember_me, id: "remember-me", disabled: true %>
          <span>ログイン情報を記憶する</span>
        <% end %>
        <%= f.submit "ログイン状態です", class: "btn btn-primary btn-block btn-login", disabled: true %>
        <% end %>
      <p>
        ユーザー登録がまだの場合は<%= link_to "こちら", signup_path, disabled: true %>
      </p>
      
     <% else %>
      <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
        <%= f.label :email, "メールアドレス", class: "label-login" %>
        <%= f.email_field :email, class: 'form-control' %>
        <%= f.label :password, "パスワード", class: "label-login" %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
          <%= f.check_box :remember_me, id: "remember-me" %>
          <span>ログイン情報を記憶する</span>
        <% end %>
        <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
        <% end %>
      <p>
        ユーザー登録がまだの場合は<%= link_to "こちら", signup_path %>
      </p>
      
    <% end %>  
  </div>
</div>
