<% provide(:title, "edit") %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="form-heading">ユーザー情報の更新</h1>
    
    <%= form_with(model: @user, local: true, url: user_path(current_user), method: :patch) do |f| %>
      <%= render 'shared/error_messages', object: @user %>
    
      <%= f.label :名前, class: "label-login" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :メールアドレス, class: "label-login" %>
      <%= f.text_field :email, class: "form-control" %>
      
      <%= f.label :パスワード, class: "label-login" %>
      <%= f.text_field :password, class: "form-control" %>   
      
      <%= f.label :パスワード再入力, class: "label-login" %>
      <%= f.text_field :password_confirmation, class: "form-control" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-block btn-signup" %>

    <% end %>
  </div>
</div>